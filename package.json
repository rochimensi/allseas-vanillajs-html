{
  "scripts": {
    "dev": "npm run build:css && concurrently \"npm run build:css:watch\" \"live-server --open=/index.html --port=3000\"",
    "build:css": "npx tailwindcss -i ./src/styles.css -o ./styles.css",
    "build:css:watch": "npx tailwindcss -i ./src/styles.css -o ./styles.css --watch",
    "build": "node scripts/build.js",
    "preview": "npm run build && live-server --open=/index.html --port=3000 --entry-file=dist/index.html"
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "live-server": "^1.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  }
}
